# Orchestrator Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgres://postgres:secret@127.0.0.1:5433/orchestrator

# =============================================================================
# TELEGRAM NOTIFICATIONS
# Claude agents can send progress updates via Telegram
# Get bot token from @BotFather on Telegram
# Get user ID from @userinfobot on Telegram
# =============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_USER_ID=

# =============================================================================
# ANTHROPIC OAUTH
# For Claude Max subscription authentication
# =============================================================================
ANTHROPIC_CLIENT_ID=9d1c250a-e61b-44d9-88ed-5944d1962f5e
ANTHROPIC_AUTH_URL=https://claude.ai/oauth/authorize
ANTHROPIC_TOKEN_URL=https://console.anthropic.com/v1/oauth/token
ANTHROPIC_REDIRECT_URI=https://console.anthropic.com/oauth/code/callback
ANTHROPIC_SCOPES=org:create_api_key user:profile user:inference

# =============================================================================
# APPLICATION
# =============================================================================
APP_URL=http://localhost:3000
WS_URL=ws://localhost:3001
NODE_ENV=development

# =============================================================================
# SESSION
# =============================================================================
SESSION_SECRET=your-secure-random-secret-here

# =============================================================================
# GITHUB (optional, for repo cloning with auth)
# =============================================================================
# GITHUB_TOKEN=ghp_xxx
